            "type": "string"
          },
          "password": {
            "maxLength": 20,
            "minLength": 6,
            "type": "string",
            "format": "password",
            "nullable": true
          },
          "confirmPassword": {
            "type": "string",
            "format": "password",
            "nullable": true
          },
          "oldPassword": {
